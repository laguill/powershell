  {
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "console_title_style": "template",
    "console_title_template": "{{.Shell}} in {{ .Folder}} {{ if .Root }}root in {{.Folder}} {{end}} {{if .Segments.Session.HostName }}{{.UserName}}@{{.HostName}}in {{.Folder}} {{end}}",
    "auto_upgrade": true,
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "os",
            "style": "diamond",
            "leading_diamond": "\ue0b2",
            "template": " {{ if .WSL }}\ue712 on {{ end }}{{ .Icon }} ",
            "properties": {
              "alpine": "\uf300",
              "arch": "\uf303",
              "centos": "\uf304",
              "debian": "\uf306",
              "elementary": "\uf309",
              "fedora": "\uf30a",
              "gentoo": "\uf30d",
              "linux": "\ue712",
              "macos": "\ue711",
              "manjaro": "\uf312",
              "mint": "\uf30f",
              "opensuse": "\uf314",
              "raspbian": "\uf315",
              "ubuntu": "\uf31c",
              "windows": "\ue70f"
            },
            "background": "#575656",
            "foreground": "#D6DEEB"
          },
          {
            "type": "shell",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \uf489 {{ .Name }} ",
            "background": "#00C7FC",
            "foreground": "#011627"
          },
          {
            "type": "root",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \uf09c admin ",
            "background": "#EF541C",
            "foreground": "#D6DEEB"
          },
          {
            "type": "cmake",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \ue61e \ue61d cmake {{ .Full }} ",
            "background": "#1E9748",
            "foreground": "#E8EAEE"
          },
          {
            "type": "python",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \ue73c {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} ",
            "properties": {
              "display_mode": "context"
            },
            "background": "#FFDE57",
            "foreground": "#011627"
          },
          {
            "type": "go",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \u202d\ue626 {{ .Full }} ",
            "background": "#7FD5EA",
            "foreground": "#ffffff"
          },
          {
            "type": "rust",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "template": " \ue7a8 {{ .Full }} ",
            "background": "#99908A",
            "foreground": "#193549"
          },
          {
            "type": "git",
            "style": "powerline",
            "powerline_symbol": "\ue0b0",
            "background_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#16B1AC{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#16B1AC{{ end }}",
              "{{ if gt .Ahead 0 }}#B787D7{{ end }}",
              "{{ if gt .Behind 0 }}#B787D7{{ end }}"
            ],
            "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#CAEBE1> \uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
            "properties": {
              "branch_icon": "\ue725 ",
              "fetch_stash_count": true,
              "fetch_status": true,
              "fetch_upstream_icon": true,
              "fetch_worktree_count": true
            },
            "background": "#1BD4CD",
            "foreground": "#011627"
          } 
        ]
      },
      {
        "type": "prompt",
        "newline": true,
        "alignment": "left",
        "segments": [
          {
            "type": "session",
            "style": "diamond",
            "foreground": "#ffffff",
            "background": "#c386f1",
            "leading_diamond": "\ue0b2",
            "trailing_diamond": "",
            "template": "{{ if .SSHSession }}\ueba9 {{ .HostName }}{{ end }}"
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "status",
            "style": "diamond",
            "foreground_templates": [
              "{{ if gt .Code 0 }}#D6DEEB{{ end }}"
            ],
            "background_templates": [
              "{{ if gt .Code 0 }}#E44141{{ end }}"
            ],
            "leading_diamond": "\ue0b6",
            "template": " {{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
            "properties": {
              "always_enabled": true
            },
            "background": "#03DED3",
            "foreground": "#414141"
          },
          {
            "type": "executiontime",
            "style": "diamond",
            "trailing_diamond": "\ue0b4",
            "template": " \uf252 {{ .FormattedMs }} ",
            "properties": {
              "style": "roundrock",
              "threshold": 0
            },
            "background": "#575656",
            "foreground": "#D6DEEB"
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "template": "\u256d\u2500",
            "foreground": "#D6DEEB"
          },
          {
            "type": "time",
            "style": "plain",
            "template": "{{ .CurrentDate | date .Format }} <#79DFE1>|</>",
            "properties": {
              "time_format": "<#D6DEEB>\ue641 15:04:05</> <#79DFE1>|</> \uf073 2 Jan, Monday"
            },
            "foreground": "#F2D3B6"
          },
          {
            "type": "path",
            "style": "diamond",
            "leading_diamond": "<#00C7FC> \uf07b </><#B6D6F2> in </>",
            "template": " {{ .Path }} ",
            "properties": {
              "folder_icon": " \uf07c ",
              "folder_separator_icon": " \uf061 ",
              "home_icon": "\ueb06 ",
              "max_depth": 3,
              "style": "agnoster_short"
            },
            "foreground": "#B6D6F2"
          }
        ],
        "newline": true
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "template": "\u2570\u2500",
            "foreground": "#D6DEEB"
          },
          {
            "type": "status",
            "style": "plain",
            "template": "❯ ",
            "properties": {
              "always_enabled": true
            },
            "foreground": "#D6DEEB"
          }
        ],
        "newline": true
      }
    ],
    "transient_prompt": {
      "template": "\ue285 ",
      "background": "transparent",
      "foreground": "#FEF5ED"
    },
    "secondary_prompt": {
      "template": "\u2570\u2500❯ ",
      "background": "transparent",
      "foreground": "#D6DEEB"
    },
    "osc99": true
  }
